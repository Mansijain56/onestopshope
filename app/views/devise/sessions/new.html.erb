<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="mb-3">
  <%= f.label :login, class: "form-label"%>
</div>
<div class="mb-3">
  <%= f.text_field :login, class: "form-control", id: "exampleFormControlInput1" %><br>
</div>
<div class="mb-3">
  <%= f.label :password, class: "form-label" %><br>
</div>
<div class="mb-3">
  <%= f.password_field :password, class: "form-control", id: "exampleFormControlInput1" , autocomplete: "current-password"%><br>
</div>
  <% if devise_mapping.rememberable? %>
    <div class="form-check">
      <%= f.check_box :remember_me  , class: "form-check-input", for: "flexCheckDefault"%>
      <%= f.label :remember_me , class: "form-check-label", type: "checkbox", id: "flexCheckDefault"%>
    </div>
  <% end %>

<%= f.submit "Login", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>