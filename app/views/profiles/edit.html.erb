<%= form_for @profile do |p|%>
 <% if @profile.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@profile.errors.count, "error") %> Prohibited this Customer from being saved:</h2>

    <ul>
      <% @profile.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %> 

<div class="mb-3">
  <%= p.label :avatar, class: "form-label"%>
</div>
<div class="mb-3">
  <%= p.file_field :avatar, class: "form-control", id: "exampleFormControlInput1" %><br>
</div>
<div class="mb-3">
  <%= p.label :name, class: "form-label" %><br>
</div>
<div class="mb-3">
  <%= p.text_field :name, class: "form-control", id: "exampleFormControlInput1"%><br>
</div>
<div class="mb-3">
  <%= p.label :age , class: "form-label" %>
</div>
<div class="mb-3">
  <%= p.text_field :age, class: "form-control", id: "exampleFormControlInput1"%>
</div>

<div class="mb-3">
  <%= p.label :gender, class: "form-label"%>
</div>
<div class="mb-3">
  <%= p.text_field :gender, class:"form-control form-control-lg", id: "exampleFormControlInput1" %>
</div>

<%= p.submit "Update Profile", class: "btn btn-primary" %>
<% end %>
<%= link_to "Back", root_path, class: "btn btn-primary"%>
